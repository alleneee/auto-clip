# ===== 应用配置 =====
APP_NAME=Auto-Clip
APP_VERSION=1.0.0
DEBUG=false
API_V1_PREFIX=/api/v1

# ===== Redis配置 =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ===== 任务存储配置 =====
# 是否使用Redis存储任务（true=Redis持久化存储, false=内存存储）
# 注意：内存存储会在服务重启后丢失所有任务数据
USE_REDIS_FOR_TASKS=true

# ===== 存储配置 =====
# 存储模式: local, oss, hybrid
STORAGE_BACKEND=hybrid
LOCAL_STORAGE_PATH=./storage

# 阿里云OSS配置
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_BUCKET_NAME=auto-clip-videos
OSS_REGION=cn-hangzhou

# ===== AI服务配置 =====
# DashScope (通义千问)
DASHSCOPE_API_KEY=sk-xxxxxxxxxxxxxxxxxx
DASHSCOPE_VL_MODEL=qwen-vl-plus
DASHSCOPE_TEXT_MODEL=qwen-plus

# Gemini (视频理解) - 可选配置
# 如需使用Gemini进行视频分析，请配置以下选项
GEMINI_API_KEY=
# 自定义API基础URL（可选，支持代理服务）
# 留空使用官方地址：https://generativelanguage.googleapis.com/v1beta
GEMINI_BASE_URL=
GEMINI_MODEL=gemini-2.0-flash

# 视觉分析服务选择: dashscope 或 gemini
VISION_SERVICE=dashscope

# Paraformer (语音识别) - 使用DashScope API
# 注意：Paraformer-v2 使用与DashScope相同的API密钥
# 无需单独配置Paraformer密钥，使用DASHSCOPE_API_KEY即可

# ===== 任务配置 =====
# 并行分析线程数
MAX_PARALLEL_ANALYSIS=4
# 任务超时时间（秒）
TASK_TIMEOUT=3600
# Webhook超时时间（秒）
WEBHOOK_TIMEOUT=10

# ===== 视频处理配置 =====
# 最大视频大小（字节，默认2GB）
MAX_VIDEO_SIZE=2147483648
# 支持的视频格式
SUPPORTED_FORMATS=mp4,avi,mov,mkv,flv,wmv
# 输出视频编码
OUTPUT_VIDEO_CODEC=libx264
OUTPUT_AUDIO_CODEC=aac

# ===== Webhook配置 =====
# Webhook回调URL（可选）
WEBHOOK_URL=
# Webhook密钥（用于签名验证）
WEBHOOK_SECRET=
